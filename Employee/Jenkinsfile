pipeline {
	agent any
	environment {
		DOCKERHUB_CREDENTIALS =  credentials(dockerhub_id) 
	}
	stages {
		stage('SCM Checkout') {
			steps {
				git 'https://github.com/VanashreeP/EMS.git'
			}
		}
		stage('Build docker image') {
			steps {
				sh 'docker build -t vanashreep/employee:$BUILD_NUMBER .'
			}
		}
		stage('Login to dockerhub') {
			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
		stage('Push image') {
			steps {
				sh 'docker push vanashreep/EMS:$BUILD_NUMBER .'
			}
		}
	}
	post {
		always {
			sh 'docker logout'	
		}
	}
}